<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %boldCyan(%-34.-34thread) %boldGreen(%-15.-15logger{0}) %highlight(%-6level) %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="net.dv8tion.jda" level="WARN"/>
    <logger name="net.dv8tion.jda.api" level="WARN"/>
    <logger name="net.dv8tion.jda.internal" level="WARN"/>
    <logger name="net.dv8tion.jda.*" level="warn"/>
    <logger name="dev.prodzeus.logger" level="info"/>
</configuration>